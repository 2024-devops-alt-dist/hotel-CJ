{% extends 'base.html.twig' %}

{% block title %}Connexion BO - Hotel Clair de Lune {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-control:focus {
            border-color: #008F61FF;
            box-shadow: 0 0 0 0.2rem rgba(3, 128, 20, 0.25); 
        }
    </style>
{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="full-screen-block">
            <div class="border-bloc">
                <div>
                    <h1 class="mb-4 text-center">Connectez-vous</h1>
    
                    <div class="">
                        <div class="mb-3">
                            <label class="pb-2" for="username">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div>
                            <label class="pb-2" for="password">Password</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                            <p class="mt-3"><a class="text-muted" href="" data-bs-dismiss="modal" aria-label="Close">Mot de passe oublié ?</a></p>
                        </div>
                        
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
            
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html
            
                        <div class="checkbox mb-3">
                            <input type="checkbox" name="_remember_me" id="_remember_me">
                            <label for="_remember_me">Remember me</label>
                        </div>
                    #}
            
                    <div class="center-button mt-5">
                        <button class="btn btn-md btn_login" type="submit">
                            Se connecter
                        </button>
                    </div>
                    <p class="text-center mt-3">Vous n'avez pas de compte ? <a class="text-muted" href="" data-bs-dismiss="modal" aria-label="Close">Créez en un !</a></p>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
