{% extends 'base.html.twig' %}

{% block title %}Contact - Hôtel Clair de Lune{% endblock %}

{% block body %}
{% include 'layouts/navbar.html.twig' %}

<div class="full-height bg-color-cust">
    <div class="d-flex flex-column flex-lg-row align-items-center justify-content-center mtCusto full-height">
        <div class="col-lg-5 col-12 d-flex flex-column justify-content-center text-white text-center text-lg-start">
            <h1 class="text-white">Une question, une demande ?</h1>
            <h2>Contactez nos équipes !</h2>
        </div>
    
        <div class="col-lg-6 col-12 d-flex align-items-center bg-form-contact">
            <form class="w-100" action="" method="post">
                <div class="mb-3 d-flex flex-column flex-sm-row">
                    <div class="me-sm-3 flex-grow-1 mb-3 mb-sm-0">
                        <label for="nom" class="form-label">Nom *</label>
                        <input type="text" class="form-control" placeholder="Dupont" id="nom" name="nom" required>
                    </div>
                    <div class="flex-grow-1">
                        <label for="prenom" class="form-label">Prénom</label>
                        <input type="text" class="form-control" placeholder="Pierre" id="prenom" name="prenom">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email *</label>
                    <input type="email" class="form-control" id="email" placeholder="dupont.pierre@gmail.com" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="sujet" class="form-label">Sujet*</label>
                    <select class="form-select" id="sujet" name="sujet" required>
                        <option value="reclamation">J'ai une question</option>
                        <option value="reclamation">Je souhaite poser une réclamation</option>
                        <option value="service_supplementaire">Je souhaite commander un service supplémentaire</option>
                        <option value="informations_suite">Je souhaite en savoir plus sur une suite</option>
                        <option value="probleme_technique">J’ai un souci avec cette application</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message*</label>
                    <textarea class="form-control" placeholder="Votre message ..." id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn_contact">Envoyer</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
